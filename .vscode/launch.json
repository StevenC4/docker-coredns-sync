{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Default (no args)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/docker-coredns-sync",
            "envFile": "${workspaceFolder}/.devcontainer/.env",
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug with Debug Log",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/docker-coredns-sync",
            "envFile": "${workspaceFolder}/.devcontainer/.env",
            "args": ["--log-level", "DEBUG"],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug with Subcommand X",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/docker-coredns-sync",
            "envFile": "${workspaceFolder}/.devcontainer/.env",
            "args": ["subcommandX", "--option", "value"],
        }
    ]
}
